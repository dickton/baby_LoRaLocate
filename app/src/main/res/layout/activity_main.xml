<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/main_txt_view_title"
        android:textSize="50dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/main_btn_get_location"
            android:id="@+id/main_btn_get_location"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/main_btn_manual_input"
            android:id="@+id/main_btn_manual_input"
            android:layout_marginTop="20dp"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/main_btn_dev_info"
            android:id="@+id/main_btn_dev_info"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

</LinearLayout>


